<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springsecurity02.dao.UserDao">


    <select id="loadUserByUsername" resultType="com.example.springsecurity02.entity.User">
        select * from user where username=#{username}
    </select>
    <select id="searchRoleByUid" resultType="com.example.springsecurity02.entity.Role">
        select r.id,r.name,r.name_zh as nameZh
        from `role` r ,user_role ur
        where r.id = ur.rid
        and ur.uid=#{uid}

    </select>
</mapper>